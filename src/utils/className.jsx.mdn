type ButtonProps = {
  variant?: 'filled';
}

const useCns = makeCns<ButtonProps>((props) => ({
  color: props.theme.color.main,
  padding: props.theme.size.sm,
  ...(props.variant === "filled" && {
    backgroundColor: props.theme.color.background,
  }),
}));

function Button({ children, ...props }: ButtonProps) {
  const cns = useCns(props);

  return <button classNames={cns}>{children}</button>;
}
